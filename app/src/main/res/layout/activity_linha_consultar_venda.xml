<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nome do Cliente:"
            android:id="@+id/textViewNomeCliente"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Produto"
            android:id="@+id/textViewProduto"
            android:layout_marginLeft="20dp"
            android:textColor="@color/abc_hint_foreground_material_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/textViewQuantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textViewProduto"
            android:layout_toRightOf="@+id/textViewProduto"
            android:text="x Quantidade"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/abc_hint_foreground_material_light" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewValorTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Valor Total"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#85bb65" />

        <TextView
            android:id="@+id/textViewDivida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textViewValorTotal"
            android:layout_toRightOf="@+id/textViewValorTotal"
            android:text="DÃ­vida"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#b33a3a" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="21dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir"
            android:id="@+id/buttonExcluir"
            android:background="@android:color/transparent"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:textColor="#276bea"
            android:typeface="monospace"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/buttonEditar" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="Editar"
            android:id="@+id/buttonEditar"
            android:background="@android:color/transparent"
            android:textColor="#276bea"
            android:typeface="monospace"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/buttonExcluir"
            android:layout_toStartOf="@+id/buttonExcluir"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" />



    </RelativeLayout>


</LinearLayout>